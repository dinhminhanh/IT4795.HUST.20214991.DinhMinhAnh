<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.3"/>

    <!-- Row 1 -->
    <Button
        android:id="@+id/buttonCE"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="CE"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintLeft_toRightOf="@id/buttonCE"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonBS"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="BS"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintLeft_toRightOf="@id/buttonC"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/textViewResult"
        app:layout_constraintLeft_toRightOf="@id/buttonBS"
        android:layout_marginLeft="5dp" />

    <!-- Row 2 -->
    <Button
        android:id="@+id/button7"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonCE"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonC"
        app:layout_constraintLeft_toRightOf="@id/button7"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonBS"
        app:layout_constraintLeft_toRightOf="@id/button8"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonDivide"
        app:layout_constraintLeft_toRightOf="@id/button9"
        android:layout_marginLeft="5dp" />

    <!-- Row 3 -->
    <Button
        android:id="@+id/button4"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintLeft_toRightOf="@id/button4"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button9"
        app:layout_constraintLeft_toRightOf="@id/button5"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonMultiply"
        app:layout_constraintLeft_toRightOf="@id/button6"
        android:layout_marginLeft="5dp" />

    <!-- Row 4-->
    <Button
        android:id="@+id/button1"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintLeft_toRightOf="@id/button1"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintLeft_toRightOf="@id/button2"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonSubtract"
        app:layout_constraintLeft_toRightOf="@id/button3"
        android:layout_marginLeft="5dp" />

    <!-- Row 5-->
    <Button
        android:id="@+id/buttonPlusMinus"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="+/-"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/button0"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintLeft_toRightOf="@id/buttonPlusMinus"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonDecimal"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#F0F0F0"
        android:text="."
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintLeft_toRightOf="@id/button0"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="97dp"
        android:layout_height="100dp"
        android:backgroundTint="#E0E0E0"
        android:text="="
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/buttonAdd"
        app:layout_constraintLeft_toRightOf="@id/buttonDecimal"
        android:layout_marginLeft="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>